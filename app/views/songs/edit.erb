<form method="POST" action="/songs/<%= @song.slug %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h2>Edit Song</h2>
  <input type="text" id="Name" name="song[name]" placeholder="Song Name" value="<%= @song.name %>">
  <input type="text" id="Artist Name" name="artist[name]" placeholder="Artist Name">
  <input type="text" id="Genre 1 Name" name="genres[][name]" placeholder="Genre Name">
  <input type="text" id="Genre 2 Name" name="genres[][name]" placeholder="Genre Name">

  <h3>Select Genres</h3>
  <% @genres.each do |genre| %>
    <input type="checkbox" id="<%= genre.name %>" name="genre_ids[]" value=<%= genre.id %> <%='checked' if @song.genres.include?(genre) %>><%= genre.name %></input>
  <% end %>

  <h3>Select Artists</h3>
  <% @artists.each do |artist| %>
    <input type="checkbox" id="<%= artist.name %>" name="song[artist_id]" value=<%= artist.id %> <%='checked' if @song.artist == artist %>><%= artist.name %></input>
  <% end %>

  <br></br>

  <input type="submit" value="Save">
</form>
